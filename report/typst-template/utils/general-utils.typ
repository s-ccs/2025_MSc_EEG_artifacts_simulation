// prose citation helper function (from https://github.com/typst/typst/issues/2716#issuecomment-1817870741)
// usage: #pc[@refname]
#let pc = (citation) => {
  set cite(form: "prose")
  citation
}

// inline todo helper function
// usage: #ilt("todo text") or #ilt[todo text]
#let ilt = (text) => {
  todo(text, inline: true)
}

